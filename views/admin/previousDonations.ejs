<main>
    <%- include('../partials/adminSidebar') %>

    <div id="main-wrapper">
        <div class="bg-white shadow-sm p-3">
            <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
            <h5 class="m-0 color-theme d-inline-block">Previous Donations</h5>
        </div>

        <div class="col col-sm-10 col-12 m-auto my-4" style="max-height: 75%; overflow: auto;">
            <!-- Add detailed donor information here -->
            <% if (typeof donation !== 'undefined' && donation) { %>
                <div class="mb-2">
                    <span>Donor Name:</span>
                    <span>
                        <% if (donation.donor) { %>
                            <%= donation.donor.firstName + " " + donation.donor.lastName %>
                        <% } else { %>
                            Donor information not available
                        <% } %>
                    </span>
                </div>
            <% } %>

            <table class="table table-info table-striped table-hover m-0 bg-white">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Donor name</th>
                        <th scope="col">Food type</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < previousDonations.length; i++) { %>
                        <tr>
                            <th scope="row"> <%= i + 1 %> </th>
                            <td>
                                <% if (previousDonations[i].donor) { %>
                                    <%= previousDonations[i].donor.firstName + " " + previousDonations[i].donor.lastName %>
                                <% } else { %>
                                    Donor information not available
                                <% } %>
                            </td>
                            <td> <%= previousDonations[i].foodType %> </td>
                            <td> <%= previousDonations[i].quantity %> </td>
                            <td class="fw-bold text-<%= previousDonations[i].status %>"> <%= previousDonations[i].status %> </td>
                            <td><a href="/admin/donation/view/<%= previousDonations[i]._id %>" class="btn">View</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>
